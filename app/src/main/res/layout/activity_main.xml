<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/jumpToNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="jumpToNormal"
            android:text="跳转到普通的数据绑定" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/jumpToObservable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="jumpToObservable"
            android:text="跳转到可以被观察的数据绑定" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/jumpToLiveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="jumpToLiveData"
            android:text="跳转到可以liveData" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="jumpToLiveDataAndViewModel"
            android:text="跳转到liveData和ViewModel" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="jumpToShareActivity"
            android:text="跳转到ViewModel共享数据"/>
    </LinearLayout>
</layout>